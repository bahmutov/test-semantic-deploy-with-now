{
  "name": "test-semantic-deploy-with-now",
  "description": "Test semantic-action to deploy using Zeit Now",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/test-semantic-deploy-with-now/issues",
  "private": true,
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "public"
  ],
  "homepage": "https://github.com/bahmutov/test-semantic-deploy-with-now#readme",
  "keywords": [
    "deploy",
    "now",
    "semantic-action",
    "test"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/test-semantic-deploy-with-now.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "ava test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "semantic-deploy": "semantic-action pre && npm run deploy && semantic-action post",
    "deploy": "now-pipeline --alias test-semantic-deploy-with-now-123 --test 'npm run unit'",
    "start": "serve public",
    "git-last": "git-last -f public/build.json"
  },
  "release": {
    "analyzeCommits": "simple-commit-message",
    "generateNotes": "github-post-release",
    "verifyRelease": {
      "path": "dont-crack",
      "test-against": []
    },
    "getLastRelease": {
      "path": "url-to-sha",
      "url": "https://test-semantic-deploy-with-now-123.now.sh/build.json",
      "property": "id"
    }
  },
  "devDependencies": {
    "ava": "0.22.0",
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.1",
    "dont-crack": "1.2.1",
    "git-issues": "1.3.1",
    "git-last": "1.0.1",
    "github-post-release": "1.13.1",
    "got": "7.1.0",
    "license-checker": "13.0.3",
    "mocha": "3.5.0",
    "now-pipeline": "1.8.0",
    "nsp": "2.7.0",
    "pre-git": "3.15.3",
    "prettier-standard": "6.0.0",
    "semantic-release": "7.0.2",
    "simple-commit-message": "3.3.1",
    "standard": "10.0.3"
  },
  "dependencies": {
    "serve": "6.0.6"
  },
  "now": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
